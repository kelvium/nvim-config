# conditionals
snippet if
	if (${1}) {
		${0:${VISUAL}}
	}
snippet ife
	if (${1}) {
		${2:${VISUAL}}
	} else {
		${0}
	}
snippet el
	else {
		${0:${VISUAL}}
	}
snippet elif
	else if (${1}) {
		${0:${VISUAL}}
	}
snippet t
	$1 ? $2 : $0

# loops
snippet while
	while (${1}) {
		${0:${VISUAL}}
	}
snippet for
	for (u32 i = ${1:0}; i < ${2}; ++i) {
		${0:${VISUAL}}
	}
